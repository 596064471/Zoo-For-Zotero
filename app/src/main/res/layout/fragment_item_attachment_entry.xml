<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/constraintLayout_attachments_entry"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground"
        tools:context=".LibraryActivity.ItemView.ItemAttachmentEntry">

    <ImageView
            android:src="@drawable/treeitem_attachment_link_2x"
            android:layout_width="48dp"
            android:layout_height="48dp" android:id="@+id/imageView_attachment_icon" android:layout_weight="1"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/hello_blank_fragment"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" android:id="@+id/textView_filename"
            app:layout_constraintStart_toEndOf="@+id/imageView_attachment_icon"
            app:layout_constraintTop_toTopOf="@+id/imageView_attachment_icon"
            app:layout_constraintBottom_toBottomOf="@+id/imageView_attachment_icon" android:layout_marginStart="16dp"
            android:autoText="false" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
